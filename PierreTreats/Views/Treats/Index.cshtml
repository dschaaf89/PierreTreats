@{
  Layout = "_Layout";
}
@using PierreTreats.Models;
@model List<PierreTreats.Models.Treat>;

@Html.ActionLink(" Add Treat", "Create", null, null, new { @class="btn btn-info fa fa-user-plus" })
@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })


<h1>Treats:</h1>

@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
} 
<ul>
  @foreach (Treat treat in Model) 
  {
    <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
  }
</ul>