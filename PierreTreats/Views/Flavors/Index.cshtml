@{
  Layout = "_Layout";
}
@using PierreTreats.Models;
@model List<PierreTreats.Models.Flavor>;

@Html.ActionLink(" Add Flavor", "Create", null, null, new { @class="btn btn-info fa fa-user-plus" })
@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
@Html.ActionLink(" Edit Flavor", "Edit", null, null, new { @class="btn btn-info fa fa-user-plus" })

<h1>Flavors:</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added yet!</h3>
} 
<ul>
  @foreach (Flavor flavor in Model) 
  {
    <li>@Html.ActionLink($"{flavor.FlavorType}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>