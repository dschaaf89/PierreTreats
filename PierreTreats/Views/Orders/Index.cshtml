@{
  Layout = "_Layout";
}
@using PierreTreats.Models;


@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
<h1>Order:</h1>

@if (@Model.Count == 0)
{
  <h3>No Treats have been Ordered Yet!</h3>
} 
<ul>
 <h1>@Model.Count</h1>
  @foreach (Order order in Model) 
  {
    <li>@Html.ActionLink($"{order.Stock.Treat.Name}", "Details", "treats", new { id = order.Stock.Treat.TreatId }) </li>
  }
</ul>
